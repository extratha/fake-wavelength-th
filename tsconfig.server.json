{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/server",
    "rootDir": "src/server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/server/**/*", "src/types/**/*"]
}
